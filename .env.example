# Azure DVC Remote Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git!

# Azure Storage Account Details
AZURE_STORAGE_ACCOUNT_NAME=btcmlopsstorage
AZURE_STORAGE_ACCOUNT_KEY=YOUR_STORAGE_KEY_HERE
AZURE_STORAGE_CONTAINER=dvc-data
AZURE_RESOURCE_GROUP=btc-mlops-rg
AZURE_LOCATION=westeurope

# DVC Configuration
DVC_REMOTE_NAME=azure
DVC_REMOTE_URL=azure://dvc-data/
DVC_AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=btcmlopsstorage;AccountKey=YOUR_STORAGE_KEY_HERE;EndpointSuffix=core.windows.net

# For CI/CD Pipelines (GitHub Actions, GitLab CI, etc.)
# Store this as a secret in your CI/CD provider
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=btcmlopsstorage;AccountKey=YOUR_STORAGE_KEY_HERE;EndpointSuffix=core.windows.net
